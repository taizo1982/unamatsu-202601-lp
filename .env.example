# Base path for subdirectory deployment (e.g. /seijin). Leave empty for root.
VITE_BASE_PATH=/example

# Google Analytics measurement ID (e.g. G-1234567890)
VITE_GA_MEASUREMENT_ID=

# Google Ads conversion ID (e.g. AW-1234567890). Optional.
VITE_GA_ADS_ID=

# Meta (Facebook) Pixel ID
VITE_META_PIXEL_ID=

# Meta App ID if you need to pair the pixel with a Business app. Optional.
VITE_META_APP_ID=

# OGP / Social share settings
# These values populate <meta property="og:*"> and Twitter Card tags.
VITE_OG_TYPE=website
VITE_SITE_DESCRIPTION=
VITE_OG_TITLE=
VITE_OG_DESCRIPTION=
VITE_OG_SITE_NAME=
VITE_OG_URL=
VITE_OG_IMAGE_URL=
VITE_OG_IMAGE_WIDTH=1200
VITE_OG_IMAGE_HEIGHT=630

# Twitter Card specific settings
VITE_TWITTER_CARD=summary_large_image
VITE_TWITTER_SITE=
VITE_TWITTER_CREATOR=